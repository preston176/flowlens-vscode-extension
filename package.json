{
  "name": "flowlens",
  "displayName": "FlowLens",
  "description": "Instantly resume your coding flow â€” capture and restore your VS Code sessions with open files, terminals, git branch, and notes",
  "version": "0.1.2",
  "publisher": "preston176",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "productivity",
    "context",
    "session",
    "flow",
    "developer-tools",
    "workspace",
    "context-switching",
    "restore",
    "capture"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "FlowLens.captureSession",
        "title": "FlowLens: Capture Session"
      },
      {
        "command": "FlowLens.quickCapture",
        "title": "FlowLens: Quick Capture (Smart Naming)"
      },
      {
        "command": "FlowLens.captureFromTemplate",
        "title": "FlowLens: Capture from Template"
      },
      {
        "command": "FlowLens.showSessions",
        "title": "FlowLens: Show Sessions"
      },
      {
        "command": "FlowLens.openSessionsPanel",
        "title": "FlowLens: Open Sessions Panel"
      },
      {
        "command": "FlowLens.showProductivityDashboard",
        "title": "FlowLens: Show Productivity Dashboard"
      },
      {
        "command": "FlowLens.openDashboard",
        "title": "FlowLens: Open Dashboard"
      },
      {
        "command": "FlowLens.exportSessions",
        "title": "FlowLens: Export Sessions"
      },
      {
        "command": "FlowLens.importSessions",
        "title": "FlowLens: Import Sessions"
      },
      {
        "command": "FlowLens.shareSession",
        "title": "FlowLens: Share Session"
      },
      {
        "command": "FlowLens.upgradeToPro",
        "title": "FlowLens: Upgrade to Pro"
      }
    ],
    "keybindings": [
      {
        "command": "FlowLens.quickCapture",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      },
      {
        "command": "FlowLens.showSessions",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "FlowLens.showProductivityDashboard",
        "key": "cmd+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "FlowLens.openDashboard",
        "key": "cmd+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "configuration": {
      "title": "FlowLens",
      "properties": {
        "flowlens.autoCapture.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic session capture"
        },
        "flowlens.autoCapture.onBranchSwitch": {
          "type": "boolean",
          "default": true,
          "description": "Auto-capture when switching git branches"
        },
        "flowlens.autoCapture.onIdleTime": {
          "type": "boolean",
          "default": false,
          "description": "Auto-capture after idle period"
        },
        "flowlens.autoCapture.idleMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "Minutes of idle time before auto-capture"
        },
        "flowlens.autoCapture.onWorkspaceFolderChange": {
          "type": "boolean",
          "default": true,
          "description": "Auto-capture when workspace folders change"
        },
        "flowlens.autoCapture.maxPerDay": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 100,
          "description": "Maximum auto-captures per day"
        },
        "flowlens.analytics.trackUsage": {
          "type": "boolean",
          "default": true,
          "description": "Track usage analytics (all data stays local)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build:webview": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/preston176/flowlens-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/preston176/flowlens-vscode-extension/issues"
  },
  "homepage": "https://flowlens-vscode.vercel.app",
  "qna": "https://github.com/preston176/flowlens-vscode-extension/discussions"
}
